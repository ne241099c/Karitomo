<% @page_title = "特別会員名簿" %>
<h1><%= @page_title %></h1>

<% if @members.present? %>
    <table class="list">
        <thead>
            <tr>
                <th>ユーザ名</th>
            </tr>
        </thead>
        <tbody>
            <% @members.each do |member| %>
                <tr>
                    <td><%= link_to member.name, member %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>会員情報がありません。</p>
<% end %>
