<!DOCTYPE html>
<html>
	<head>
		<title><%= @page_title %> - 管理画面</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body class="admin">
		<header>
			<div class="container">
				<span class="logo">管理画面</span>
				<nav class="admin-nav">
					<% if current_admin %>
						<ul>
						<li><%= link_to "TOP", :admin_root %></li>  
						<li><%= link_to "統計", admin_statistics_path %></li>
						<li><%= link_to "会員一覧", :admin_members %></li>
						<li><%= link_to "タグ", :admin_tags %></li>
						<li><%= link_to "地域", :admin_regions %></li>
						<li><%= link_to "予約", :admin_reservations %></li>
						<li><%= link_to "お問い合わせ", :admin_contacts %></li>
						<li><%= link_to "通報", :admin_reports %></li>
						<li><%= link_to "評価", :admin_reviews %></li>
						<li><%= link_to "ブロック一覧", :admin_blocked_members %></li>
						<li><%= button_to "ログアウト", :admin_session, method: :delete, class: "link-button" %></li>
						</ul>
					<% end %>
				</nav>
			</div>
		</header>

		<main class="container">
			<% if flash.notice %>
				<p class="notice"><%= flash.notice %></p>
			<% end %>
			<% if flash.alert %>
				<p class="alert"><%= flash.alert %></p>
			<% end %>

			<%= yield %>
		</main>

		<footer>
			<div class="container">
				<p>&copy; 2026 Karitomo Admin Panel</p>
			</div>
		</footer>
	</body>
</html>