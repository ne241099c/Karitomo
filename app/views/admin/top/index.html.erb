<% @page_title = "管理TOP" %>

<h1><%= @page_title %></h1>

<div class="admin-stats">
	<div class="stat-card stat-card-blue">
		<h3>総会員数</h3>
		<p class="stat-number"><%= @members_count %> 名</p>
		<%= link_to "会員一覧を確認", :admin_members %>
	</div>

	<div class="stat-card stat-card-orange">
		<h3>稼働中の予約</h3>
		<p class="stat-number"><%= @active_reservations %> 件</p>
		<%= link_to "全予約履歴を確認", :admin_reservations %>
	</div>
</div>

<div class="admin-menu">
	<h2>クイックリンク</h2>
	<ul class="admin-quick-links">
		<li><%= link_to "統計情報", admin_statistics_path, class: "btn-secondary" %></li>
		<li><%= link_to "タグの追加・編集", :admin_tags, class: "btn-secondary" %></li>
		<li><%= link_to "地域の追加・編集", :admin_regions, class: "btn-secondary" %></li>
		<li><%= link_to "ブロック一覧", :admin_blocked_members, class: "btn-secondary" %></li>
		<li><%= link_to "お問い合わせ一覧", :admin_contacts, class: "btn-secondary" %></li>
		<li><%= link_to "通報履歴の確認", :admin_reports, class: "btn-secondary" %></li>
		<li><%= link_to "評価", :admin_reviews, class: "btn-secondary" %></li>
	</ul>
</div>
