<% @page_title = "管理画面ダッシュボード" %>

<h1><%= @page_title %></h1>

<div class="admin-stats" style="display: flex; gap: 20px; margin-bottom: 40px;">
  <div class="stat-card" style="flex: 1; padding: 20px; background: #e3f2fd; border-radius: 8px; text-align: center;">
    <h3>総会員数</h3>
    <p style="font-size: 2em; font-weight: bold;"><%= @members_count %> 名</p>
    <%= link_to "会員一覧を確認", :admin_members %>
  </div>

  <div class="stat-card" style="flex: 1; padding: 20px; background: #fff3e0; border-radius: 8px; text-align: center;">
    <h3>稼働中の予約</h3>
    <p style="font-size: 2em; font-weight: bold;"><%= @active_reservations %> 件</p>
    <%= link_to "全予約履歴を確認", :admin_reservations %>
  </div>
</div>

<div class="admin-menu">
  <h2>クイックリンク</h2>
  <ul style="list-style: none; padding: 0; display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px;">
    <li><%= link_to "タグの追加・編集", :admin_tags, class: "btn-secondary", style: "display: block; padding: 15px; text-decoration: none; border: 1px solid #ddd; border-radius: 4px;" %></li>
    <li><%= link_to "地域の追加・編集", :admin_regions, class: "btn-secondary", style: "display: block; padding: 15px; text-decoration: none; border: 1px solid #ddd; border-radius: 4px;" %></li>
    <li><%= link_to "お問い合わせ一覧", :admin_contacts, class: "btn-secondary", style: "display: block; padding: 15px; text-decoration: none; border: 1px solid #ddd; border-radius: 4px;" %></li>
    <li><%= link_to "通報履歴の確認", :admin_reports, class: "btn-secondary", style: "display: block; padding: 15px; text-decoration: none; border: 1px solid #ddd; border-radius: 4px;" %></li>
  </ul>
</div>