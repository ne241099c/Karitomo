<% @page_title = "会員詳細: #{@member.name}" %>
<h1><%= @page_title %></h1>

<div class="actions" style="margin-bottom: 20px;">
  <%= link_to "プロフィールを編集する", edit_admin_member_path(@member), class: "btn-secondary" %> |
  <%= link_to "この会員の予約履歴を見る", admin_reservations_path(member_id: @member.id), class: "btn-primary" %>
</div>

<table class="attr">
  <tr>
	<th>氏名</th>
	<td><%= @member.name %></td>
  </tr>
  <tr>
	<th>区分</th>
	<td><%= @member.special_member ? "特別会員" : "一般会員" %></td>
  </tr>
  <tr>
	<th>メールアドレス</th>
	<td><%= @member.email %></td>
  </tr>
  <tr>
	<th>誕生日</th>
	<td><%= @member.birthday %></td>
  </tr>
  <tr>
	<th>性別</th>
	<td><%= @member.sex == 1 ? "男性" : "女性" %></td>
  </tr>
  <tr>
	<th>自己紹介</th>
	<td><%= simple_format(@member.comment) %></td>
  </tr>
</table>

<div class="actions">
  <%= link_to "一覧へ戻る", admin_members_path %>
</div>