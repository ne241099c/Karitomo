<% @page_title = "地域" %>

<div class="admin-header">
	<h1><%= @page_title %></h1>
</div>

<div class="form-section mb-30">
	<h2>新規地域追加</h2>
	<%= form_with(model: [:admin, @region], local: true) do |f| %>
		<%= render "shared/error_messages", object: @region %>
		<div class="field mb-20">
			<%= f.label :name, "地域名" %>
			<%= f.text_field :name, placeholder: "地域名を入力" %>
		</div>
		<div class="actions">
			<%= f.submit "追加する", class: "btn-primary" %>
		</div>
	<% end %>
</div>

<table class="list">
	<thead>
		<tr>
			<th>ID</th>
			<th>地域名</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<% @regions.each do |region| %>
			<tr>
				<td><%= region.id %></td>
				<td><%= region.name %></td>
				<td>
					<%= link_to "編集", edit_admin_region_path(region) %> |
					<%= link_to "削除", admin_region_path(region), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
