<% @page_title = "タグ" %>

<div class="admin-header">
	<h1><%= @page_title %></h1>
</div>

<div class="form-section mb-30">
	<h2>新規タグ追加</h2>
	<%= form_with(model: [:admin, @tag], local: true) do |f| %>
		<%= render "shared/error_messages", object: @tag %>
		<div class="field mb-20">
			<%= f.label :name, "タグ名" %>
			<%= f.text_field :name, placeholder: "タグ名を入力" %>
		</div>
		<div class="actions">
			<%= f.submit "追加する", class: "btn-primary" %>
		</div>
	<% end %>
</div>

<table class="list">
	<thead>
		<tr>
			<th>ID</th>
			<th>タグ名</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<% @tags.each do |tag| %>
			<tr>
				<td><%= tag.id %></td>
				<td><%= tag.name %></td>
				<td>
				<%= link_to "編集", edit_admin_tag_path(tag) %> |
				<%= link_to "削除", admin_tag_path(tag), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
