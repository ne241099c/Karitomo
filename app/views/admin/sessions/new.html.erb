<% @page_title = "管理者ログイン" %>

<div class="admin-login-container" style="max-width: 400px; margin: 100px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
  <h1 style="text-align: center; margin-bottom: 20px;"><%= @page_title %></h1>

  <%= form_tag :admin_session do %>
    <div class="field" style="margin-bottom: 15px;">
      <%= label_tag :name, "名前" %><br>
      <%= text_field_tag :name, params[:name], style: "width: 100%; padding: 8px; box-sizing: border-box;" %>
    </div>

    <div class="field" style="margin-bottom: 15px;">
      <%= label_tag :password, "パスワード" %><br>
      <%= password_field_tag :password, nil, style: "width: 100%; padding: 8px; box-sizing: border-box;" %>
    </div>

    <div class="actions" style="text-align: center;">
      <%= submit_tag "ログイン", class: "btn-primary", style: "width: 100%; padding: 10px; cursor: pointer;" %>
    </div>
  <% end %>
  
  <div style="margin-top: 20px; text-align: center;">
    <%= link_to "サービスTOPへ戻る", root_path %>
  </div>
</div>