<div class="field">
    <%= form.label :price_per_hour, "時給" %>
    <%= form.number_field :price_per_hour %>
</div>

<div class="field">
    <label>タグ</label>
		<div class="checkbox-group">
			<%= form.collection_check_boxes :tag_ids, tags, :id, :name do |b| %>
				<label class="custom-checkbox-label">
				<%= b.check_box %>
				<span class="checkmark"></span>
				<span class="label-text"><%= b.text %></span>
				</label>
		<% end %>
    </div>
</div>

<div class="field">
	<label>出勤可能な地域</label>
	<div class="checkbox-group">
		<%= form.collection_check_boxes :region_ids, regions, :id, :name do |b| %>
			<label class="custom-checkbox-label">
				<%= b.check_box %>
				<span class="checkmark"></span>
				<span class="label-text"><%= b.text %></span>
			</label>
		<% end %>
	</div>
  </div>

<div class="field">
	<label>出勤可能な日時</label>
	<%= schedule_table_tag(member) %>
</div>
