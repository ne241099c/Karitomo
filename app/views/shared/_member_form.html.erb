<%= render "shared/error_messages", object: form.object %>

<%= render "shared/basic_info_fields", form: form %>

<% unless form.object.new_record? %>
	<div class="field mb-20">
		<div class="simple-checkbox-wrapper">
			<%= form.check_box :special_member, id: "special_member_checkbox" %>
			<%= form.label :special_member, "特別会員になる", class: "m-0 cursor-pointer" %>
		</div>
	</div>

	<div id="special_member_fields" 
		class="<%= form.object.special_member? ? '' : 'hidden' %>"
		data-hidden-class="hidden">
		<%= render "shared/special_member_fields", form: form, member: @member, tags: @tags, regions: @regions %>
	</div>
<% end %>

<% if  @member.new_record? %>
	<div class="field">
		<%= form.label :password, "パスワード" %>
		<%= form.password_field :password %>
	</div>
	<div class="field">
		<%= form.label :password_confirmation, "パスワード（確認）" %>
		<%= form.password_field :password_confirmation %>
	</div>
<% end %>
