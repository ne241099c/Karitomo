<% @page_title = "予約完了" %>
<h1>予約が完了しました</h1>

<div class="completion-box">
  <p class="success-message">以下の内容で予約を確定しました。</p>

  <table class="attr">
    <tr>
      <th>予約番号</th>
      <td><%= @reservation.id %></td>
    </tr>
    <tr>
      <th>予約相手</th>
      <td><%= @reservation.target_member.name %> さん</td>
    </tr>
    <tr>
      <th>日時</th>
      <td><%= @reservation.start_at.strftime("%Y年%m月%d日 %H:%M") %></td>
    </tr>
    <tr>
      <th>利用時間</th>
      <td><%= @reservation.hours %> 時間</td>
    </tr>
    <tr>
      <th>合計金額</th>
      <td>
        <% total_price = @reservation.hours * @reservation.target_member.price_per_hour %>
        <%= number_with_delimiter(total_price) %> 円
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= link_to "トップページへ戻る", root_path %> | 
    <%= link_to "マイページへ", account_path %>
  </div>
</div>